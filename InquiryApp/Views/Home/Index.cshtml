@using BusinessSolutionShared
@model IEnumerable<InquiryModel>

<h2>Inquiries</h2>
<table class="table">
    <thead>
        <tr>
            <th>Inquiry ID</th>
            <th>Date</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inquiry in Model)
        {
            <tr>
                <td>@inquiry.Inquiry_ID</td>
                <td>@inquiry.Date.ToString("MM/dd/yyyy")</td>
                <td>@inquiry.Name</td>
                <td>@inquiry.Phone</td>
                <td>@inquiry.Email</td>
                <td>
                    <form asp-action="DeleteInquiry" asp-controller="Home" method="post" onsubmit="return confirm('Are you sure you want to delete this inquiry?');">
                        <input type="hidden" asp-for="@inquiry.Inquiry_ID" />
                        <button type="submit" class="delete-button">
                            <i class="fa-solid fa-trash-can"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
